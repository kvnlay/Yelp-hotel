<% include ../partials/header %>
<h1>Post A New Campground</h1>
<form action="/campgrounds" method="POST">
    <div class= "form-group">
        <input type= "text" class= "form-control" name= "name" placeholder= " camp name">
    </div>
    <div class= "form-group">
        <input type= "number" class= "form-control" name= "price" placeholder= " camp price per night" min ="0.01" step="0.01">
    </div>
    <div class= "form-group">
        <input type= "text" class="form-control" name= "image" placeholder= " image url">
    </div>
    <div class= "form-group">
        <input type= "text" class="form-control" name= "description" placeholder= " input description">
    </div>
    <button class="btn btn-default" type="submit">Submit</button>
</form>
<a href="/" >Go back</a>
<% include ../partials/footer%>