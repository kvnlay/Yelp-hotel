<% include ../partials/header %>
<div class="container">
    <h1>Post A New Hotel</h1>
    <form action="/campgrounds" method="POST">
        <div class= "form-group">
            <input type= "text" class= "form-control" name= "name" placeholder= " Hotel name">
        </div>
        <div class= "form-group">
            <input type= "number" class= "form-control" name= "price" placeholder= " Hotel price per night" min ="0.01" step="0.01">
        </div>
        <div class= "form-group">
            <input type= "text" class="form-control" name= "image" placeholder= " image url">
        </div>
        <div class= "form-group">
            <input type= "text" class="form-control" name= "description" placeholder= " input description">
        </div>
        <button class="btn btn-default" type="submit">Submit</button>
    </form>
    <a href="/" >Go back</a>
</div>
<% include ../partials/footer%>